// -*- mode: jsonc -*-
{
    "layer": "top",
//    "output": "eDP-1",
    "position": "top",
    "height": 36,
    "spacing": 4,
    "margin-top": 4,
    "margin-left": 4,
    "margin-right": 4,
// Order of modules
    "modules-left": [
        "custom/apps",
        "wlr/taskbar"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "group/group-system",
        "group/group-tray",
        "hyprland/language",
        "clock",
        "group/group-power"
    ],
// Configuration of left modules
    "custom/apps": {
        "format": "Apps",
        "tooltip-format": "Applications",
        "on-click": "~/.config/wofi/applications.sh --waybar"
    },
    "wlr/taskbar": {
        "all-outputs": true,
        "icon-size": 28,
        "format": "{icon}",
        "tooltip-format": "{title}",
        "on-click": "activate"
    },
// Configuration of center modules
    "hyprland/workspaces": {
        "all-outputs": true,
        "show-special": true,
        "move-to-monitor": true,
        "format": "{icon}",
        "format-icons": { "special": "" }
    },
// Configuration of right modules
    "hyprland/language": {
        "format": "{}",
        "format-en": "EN",
        "format-ru": "RU",
        "on-click": "hyprctl switchxkblayout all next"
    },
    "clock": {
        "interval": 1,
        "format": "{:%H:%M:%S}",
        "format-alt": "{:%d.%m.%Y}",
        "tooltip-format": "{:%A, %d %B}"
    },
// Configuration of system modules
    "group/group-system": {
        "orientation": "inherit",
        "modules": [
            "systemd-failed-units",
            "cpu",
            "memory",
            "temperature",
            "battery"
        ]
    },
    "systemd-failed-units": {
        "format": " {nr_failed}"
    },
    "cpu": {
        "interval": 10,
        "format": " {usage}%"
    },
    "memory": {
        "interval": 10,
        "format": " {percentage}%",
        "tooltip-format": "{used:0.3f} MB of {total:0.3f} MB used"
    },
    "temperature": {
        "interval": 10,
        "format": " {temperatureC}°",
        "tooltip-format": "{temperatureC} °C"
    },
    "battery": {
        "interval": 10,
        "format": "{icon}",
        "format-icons": [ "", "", "", "", "" ],
        "format-charging": "",
        "tooltip-format": "{capacity}%"
    },
// Configuration of tray modules
    "group/group-tray": {
        "orientation": "inherit",
        "modules": [
            "pulseaudio#in",
            "privacy",
            "tray",
            "pulseaudio#out"
        ]
    },
    "pulseaudio#in": {
        "format": "{format_source}",
        "format-source": "",
        "format-source-muted": "",
        "tooltip-format": "Microphone Muted",
        "scroll-step": 0
    },
    "privacy": {
        "icon-size": 16,
        "icon-spacing": 8
    },
    "tray": {
        "show-passive-items": true,
        "reverse-direction": true,
        "icon-size": 22,
        "spacing": 6
    },
    "pulseaudio#out": {
        "format": "{icon}",
        "format-icons": [ " ", " ", "" ],
        "format-muted": "",
        "tooltip-format": "{volume}%",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
    },
// Configuration of power modules
    "group/group-power": {
        "orientation": "inherit",
        "modules": [
            "custom/poweroff",
            "custom/lock",
            "custom/logout",
            "custom/restart"
        ],
        "drawer": {
            "transition-left-to-right": false
        }
    },
    "custom/lock": {
        "format": "",
        "tooltip-format": "Lock",
        "on-click": "~/.config/hypr/scripts/lock.sh"
    },
    "custom/logout": {
        "format": "",
        "tooltip-format": "Log Out",
        "on-click": "~/.config/hypr/scripts/logout.sh"
    },
    "custom/restart": {
        "format": "",
        "tooltip-format": "Restart",
        "on-click": "~/.config/hypr/scripts/restart.sh"
    },
    "custom/poweroff": {
        "format": "",
        "tooltip-format": "Power Off",
        "on-click": "~/.config/hypr/scripts/poweroff.sh"
    }
}
